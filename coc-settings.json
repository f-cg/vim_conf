{
  "suggest.enablePreselect": true,
  "suggest.noselect":false,
  "signature.enable":true,
  /* "diagnostic.displayByAle":true, */
  "suggest.echodocSupport": true,
  "suggest.maxCompleteItemCount": 20,
  "eslint.filetypes": [
    "javascript",
    "typescript",
    "typescriptreact",
    "javascriptreact"
  ],
  "eslint.options": {"configFile": "/home/fcg/.eslintrc"},
  "javascript.format.enabled": true,
  "javascript.preferences.quoteStyle": "single",
  "html.format.wrapLineLength": 128,
  "suggest.removeDuplicateItems": true,
  "coc.preferences.extensionUpdateCheck": "never",
  "coc.preferences.formatOnSaveFiletypes": [],
    "languageserver": {
    "clangd": {
      "command": "clangd",
      "args": ["--background-index"],
      "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".git/", ".hg/"],
      "filetypes": ["c", "cpp", "objc", "objcpp"]
    }
  },
  // "python.linting.pylintEnabled": false,
  // "python.linting.flake8Enabled": false,
  // "python.linting.enabled": true,
  // "python.jediEnabled": false,
  "python.pythonPath": "/usr/bin/python3",
  "java.home":"/usr/lib/jvm/java-8-openjdk",
  "markdownlint.config": {"line_length": false}
}

